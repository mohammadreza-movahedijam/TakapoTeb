@model Application.Commands.Partner.PartnerDto

@{
    ViewData["Title"] = "ویرایش شریک تجاری";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Script {

    <script src="~/assets/js/upload.js"></script>
    <partial name="_ValidationScriptsPartial.cshtml" />
}
<nav aria-label="breadcrumb">
    <ol class="lh-1-85 breadcrumb">
        <li class="breadcrumb-item">
            <a href="/Admin">پیشخوان</a>
        </li>
        <li class="breadcrumb-item">
            <a href="/Admin/Partner/Index">لیست شرکای تجاری</a>
        </li>

        <li class="breadcrumb-item active">ویرایش شریک تجاری </li>
    </ol>
</nav>

<div class="row">
    <div class="col-8 offset-2">
        <div class="card mb-4">
            <div class="card-header">

                <h5 class=" heading-color">ویرایش شریک تجاری</h5>
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.ErrorMessage
                    </div>
                }
            </div>
            <form asp-area="Admin" asp-controller="Partner" asp-action="Edit"
                  method="post" class="card-body" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-12">
                        @if (Model.LogoPath == "default.jpg")
                        {
                            <img id="imagePath_1" width="100" height="80"
                                 src="~/Gallery/default.jpg" />
                        }
                        else
                        {



                            <img id="imagePath_1" width="100" height="80"
                                 src="~/Gallery/Partner/@Model.LogoPath " />
                        }
                    </div>
                    <div class="col-3">
                        <label class="form-label">لوگو</label>
                        <input asp-for="File" onchange="ChangeImage(this,1)" class="form-control" type="file" />
                    </div>
                </div>
                <div class="row">


                    <div class="col-12">
                        <label class="form-label">لینک</label>
                        <input asp-for="Link" type="text" class="form-control" />
                        <span class="text-danger" asp-validation-for="Link"></span>
                    </div>
                    <input type="hidden" asp-for="Id"/>
                    <input type="hidden" asp-for="LogoPath"/>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-sm text-white btn-success">ثبت</button>
                    <a asp-area="Admin" asp-controller="Partner" asp-action="Index" class="btn btn-sm text-white btn-warning">بازگشت</a>

                </div>
            </form>
        </div>
    </div>
</div>
