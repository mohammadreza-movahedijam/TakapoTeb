@model Application.Commands.Departement.DepartementDto

@{
    ViewData["Title"] = "ویرایش واحد اداری";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Script {
    <partial name="_ValidationScriptsPartial.cshtml" />
}
<nav aria-label="breadcrumb">
    <ol class="lh-1-85 breadcrumb">
        <li class="breadcrumb-item">
            <a href="/Admin">پیشخوان</a>
        </li>
        <li class="breadcrumb-item">
            <a href="/Admin/Departement/Index">لیست واحد‌های اداری</a>
        </li>

        <li class="breadcrumb-item active">ویرایش واحد اداری </li>
    </ol>
</nav>

<div class="row">
    <div class="col-8 offset-2">
        <div class="card mb-4">
            <div class="card-header">

                <h5 class=" heading-color">ویرایش واحد اداری</h5>
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.ErrorMessage
                    </div>

                }


            </div>
            <form asp-area="Admin" asp-controller="Departement" asp-action="Edit"
                  method="post" class="card-body">

                <div class="row">



                    <div class="col-6">
                        <label class="form-label">نام فارسی</label>
                        <input asp-for="NameFa" type="text" class="form-control" />
                        <span class="text-danger" asp-validation-for="NameFa"></span>
                    </div>
                    <div class="col-6">
                        <label class="form-label">شماره تماس فارسی</label>
                        <input asp-for="PhoneNumberFa" type="text" class="form-control" />
                        <span class="text-danger" asp-validation-for="PhoneNumberFa"></span>
                    </div>
                    <div class="col-6">
                        <label class="form-label">نام انگلیسی</label>
                        <input asp-for="NameEn" type="text" class="form-control" />
                        <span class="text-danger" asp-validation-for="NameEn"></span>
                    </div>

                    <div class="col-6">
                        <label class="form-label">شماره تماس انگلیسی</label>
                        <input asp-for="PhoneNumberEn" type="text" class="form-control" />
                        <span class="text-danger" asp-validation-for="PhoneNumberEn"></span>
                    </div>


                </div>
                <input type="hidden" asp-for="Id"/>
                <div class="mt-3">
                    <button type="submit" class="btn btn-sm text-white btn-success">ثبت</button>
                    <a asp-area="Admin" asp-controller="Departement" asp-action="Index" class="btn btn-sm text-white btn-warning">بازگشت</a>

                </div>
            </form>
        </div>
    </div>
</div>