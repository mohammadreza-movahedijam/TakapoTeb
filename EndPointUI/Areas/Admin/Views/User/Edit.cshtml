@model Application.Commands.User.DataTransferObject.UserDto

@{
    ViewData["Title"] = "ویرایش کاربر";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Script {
    <partial name="_ValidationScriptsPartial.cshtml" />
}
<nav aria-label="breadcrumb">
    <ol class="lh-1-85 breadcrumb">
        <li class="breadcrumb-item">
            <a href="/Admin">پیشخوان</a>
        </li>
        <li class="breadcrumb-item">
            <a href="/Admin/User/Index">لیست کاربران</a>
        </li>

        <li class="breadcrumb-item active">ویرایش کاربر </li>
    </ol>
</nav>

<div class="row">
    <div class="col-4 offset-4">
        <div class="card mb-4">
            <div class="card-header">

                <h5 class=" heading-color">ویرایش کاربر</h5>
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.ErrorMessage
                    </div>
                }
            </div>
            <form asp-area="Admin" asp-controller="User" asp-action="Edit" method="post" class="card-body">

                <div>
                    <label class="form-label">نام </label>
                    <input asp-for="FirstName" type="text" class="form-control" />
                    <span class="text-danger" asp-validation-for="FirstName"></span>
                </div>
                <div>
                    <label class="form-label">نام خانوادگی </label>
                    <input asp-for="LastName" type="text" class="form-control" />
                    <span class="text-danger" asp-validation-for="LastName"></span>
                </div>
                <div>
                    <label class="form-label"> کدملی</label>
                    <input asp-for="UserName" type="text" class="form-control" />
                    <span class="text-danger" asp-validation-for="UserName"></span>
                </div>
                <div>
                    <label class="form-label">نقش کاربر</label>
                    <select class="form-select" asp-for="Role" asp-items="@ViewBag.Roles">
                    </select>
                </div>
                <div>
                    <label class="form-label">شماره موبایل</label>
                    <input asp-for="PhoneNumber" type="tel" class="form-control" />
                    <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                </div>
                <div>
                    <label class="form-label">پست الکترونیک</label>
                    <input asp-for="Email" type="email" class="form-control" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div>
                    <label class="form-label">گذر واژه</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <input type="hidden" asp-for="Id"/>
                <div class="mt-3">
                    <button type="submit" class="btn btn-sm text-white btn-success">ثبت</button>
                    <a asp-area="Admin" asp-controller="User" asp-action="Index" class="btn btn-sm text-white btn-warning">بازگشت</a>

                </div>
            </form>
        </div>
    </div>
</div>