@model Application.Common.PaginatedList<Application.Queries.Question.QuestionViewModel>


@{
    ViewData["Title"] = "سوالات";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Script {

    <script src="~/js/rest.js"></script>
    <script src="~/js/sweetalert.js"></script>
    <script src="~/js/pagination.js"></script>
    <script src="~/assets/js/Question/Index.js"></script>

}
<nav aria-label="breadcrumb">
    <ol class="lh-1-85 breadcrumb">
        <li class="breadcrumb-item">
            <a href="/Admin">پیشخوان</a>
        </li>

        <li class="breadcrumb-item active">سوالات‌</li>
    </ol>
</nav>
<div class="row">
    <div class="card">
        <div class="card-header">
            <h5 class="heading-color">سوالات‌</h5>
            <a asp-area="Admin" asp-controller="Question" asp-action="Create"
               class="btn btn-sm btn-success text-white">
                ایجاد سوال
            </a>
            <form asp-area="Admin" asp-controller="Question"
                  asp-action="Index"
                  method="get" class="input-group mt-3 w-25">
                <input class="form-control form-control-sm"
                       name="keyword" type="search"
                       placeholder="یک عبارت جستجو کنید" value="@ViewBag.Search" />
                <button class="btn btn-sm btn-primary" type="submit">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
                <a asp-area="Admin" asp-controller="Question"
                   asp-action="Index"
                   class="btn btn-sm btn-warning text-white">
                    <i class="fa-solid fa-rotate-right"></i>
                </a>
            </form>
        </div>
        <div class="card-body">
            <div class="table-responsive text-nowrap">
                <table class="table table-bordered">
                    <thead>
                        <tr>

                            <th>عنوان سوال</th>
                           

                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @if (Model != null && Model.List!.Any())
                        {
                            @foreach (var item in Model.List!)
                            {
                                <tr id="item_@item.Id">


                                    <td>@item.Title</td>
                                   
                                    <td>


                                        <a asp-area="Admin" asp-controller="Question" asp-action="Edit"
                                           asp-route-id="@item.Id"
                                           class="btn btn-sm btn-warning text-white">ویرایش</a>
                                        <a onclick="Delete('@item.Id')"
                                           class="btn btn-sm btn-danger text-white">حذف</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">

            @if (Model!.TotalPage > 1)
            {
                <div id="pagination-body"
                     data-page-index="@Model.CurentPage"
                     data-total-pages="@Model.TotalPage"
                     data-search="@ViewBag.Search"
                     data-path="/Admin/Question/Index">
                </div>
            }
        </div>
    </div>
</div>

