@model Application.Commands.Event.EventDto
@{
    ViewData["Title"] = "ایجاد رویداد";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@section Script {
    <partial name="_ValidationScriptsPartial.cshtml" />
}
<nav aria-label="breadcrumb">
    <ol class="lh-1-85 breadcrumb">
        <li class="breadcrumb-item">
            <a href="/Admin">پیشخوان</a>
        </li>
        <li class="breadcrumb-item">
            <a href="/Admin/Event/Index">رویداد ها‌</a>
        </li>

        <li class="breadcrumb-item active">ایجاد رویداد </li>
    </ol>
</nav>

<div class="row">
    <div class="col-8 offset-2">
        <div class="card mb-4">
            <div class="card-header">

                <h5 class=" heading-color">ایجاد رویداد</h5>
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.ErrorMessage
                    </div>

                }


            </div>
            <form asp-area="Admin" asp-controller="Event" asp-action="Create"
                  method="post" class="card-body">

                <div class="row">


                    <div class="col-6">
                        <label class="form-label">عنوان فارسی</label>
                        <input asp-for="TitleFa" type="text" class="form-control" />
                        <span class="text-danger" asp-validation-for="TitleFa"></span>
                    </div>
                    

                    <div class="col-6">
                        <label class="form-label">عنوان انگلیسی</label>
                        <input asp-for="TitleEn" type="text" class="form-control" />
                        <span class="text-danger" asp-validation-for="TitleEn"></span>
                    </div>
                  

                    <div class="col-12">
                        <label class="form-label">توضیح فارسی</label>
                        <textarea asp-for="DescriptionFa"
                                  type="text" class="form-control" rows="4">
                                                  </textarea>
                    </div>

                    <div class="col-12">
                        <label class="form-label">توضیح انگلیسی</label>
                        <textarea asp-for="DescriptionEn"
                                  type="text" class="form-control" rows="4">
                                                  </textarea>
                    </div>




                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-sm text-white btn-success">ثبت</button>
                    <a asp-area="Admin" asp-controller="Event" asp-action="Index" class="btn btn-sm text-white btn-warning">بازگشت</a>

                </div>
            </form>
        </div>
    </div>
</div>

