@model Application.Commands.Picture.PictureDto

@{
    ViewData["Title"] = "ویرایش تصویر";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Script {
    <script src="~/assets/js/upload.js"></script>
    <partial name="_ValidationScriptsPartial.cshtml" />
}
<nav aria-label="breadcrumb">
    <ol class="lh-1-85 breadcrumb">
        <li class="breadcrumb-item">
            <a href="/Admin">پیشخوان</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-area="Admin"
               asp-controller="Picture"
               asp-action="Index" asp-route-EventId="@ViewBag.EventId">لیست تصویر ها</a>
        </li>

        <li class="breadcrumb-item active">ویرایش تصویر </li>
    </ol>
</nav>
<div class="row">
    <div class="col-4 offset-4">
        <div class="card mb-4">
            <h5 class="card-header heading-color">ویرایش تصویر</h5>
            <form asp-area="Admin" asp-controller="Picture"
                  enctype="multipart/form-data"
                  asp-action="Edit" method="post" class="card-body">
                <div>
                    @if (Model.FilePath == "default.jpg")
                    {
                        <img id="imagePath_1" width="100" height="80" src="~/Gallery/default.jpg" />
                    }
                    else
                    {



                        <img id="imagePath_1" width="100" height="80"
                             src="~/Gallery/Picture/@Model.FilePath " />
                    }
                </div> <div>
                    <label class="form-label">تصویر</label>
                    <input accept=".jpg, .jpeg, .png, .webp" asp-for="File" onchange="ChangeImage(this,1)" class="form-control" type="file" />
                </div>
                <div>
                    <label class="form-label">عنوان فارسی </label>
                    <input asp-for="TitleFa" type="text" class="form-control" />
                    <span class="text-danger" asp-validation-for="TitleFa"></span>
                </div>


                <div>
                    <label class="form-label">عنوان انگلیسی </label>
                    <input asp-for="TitleEn" type="text" class="form-control" />
                    <span class="text-danger" asp-validation-for="TitleEn"></span>
                </div>

                <input type="hidden" asp-for="Id" value="@Model.EventId" />
                <input type="hidden" asp-for="EventId" value="@Model.EventId" />
                <div class="mt-3">
                    <button type="submit" class="btn btn-sm text-white btn-success">ثبت</button>
                    <a asp-area="Admin"
                       asp-controller="Picture"
                       asp-action="Index" asp-route-EventId="@Model.EventId"
                       class="btn btn-sm text-white btn-warning">بازگشت</a>

                </div>
            </form>
        </div>
    </div>
</div>