
@{
    ViewData["Title"] = "MyProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="text-center col-xl-6 col-lg-6 col-md-12 col-sm-12 offset-xl-3 offset-lg-3 p-5">
        <h1 class="mt-5 mb-5 ">MyProfile</h1>
        @if (User.Claims.Any(w => w.Type == "Role" && w.Value == "Admin"))
        {
            <span>خوش آمدید جهت ورود به <a class="text-warning" href="/Admin">پیشخوان مدیریت</a> کلیک کنید</span>
        }
        <br/>
        <a class="btn btn-sm btn-danger text-white mt-5" href="/signout">خروج</a>

    </div>
</div>