@{
    string align = CultureInfo.CurrentUICulture.Name! == "en-US" ? "ltr" : "rtl"!;

    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Script{
    <script src="~/js/news.js"></script>
    <script src="~/js/rest.js"></script>

}
<div class="container">
    <div class="row text-center mt-5">
        <h3>@Localizer["title"]</h3>
        <p>@Localizer["text"]</p>
        <input type="hidden" id="culture" value="@align" />
        <nav class="user-tabs mb-4" style="direction:@align">
            <ul style="padding-left:0;" class="nav nav-tabs nav-tabs-bottom nav-justified">
                <li class="nav-item">
                    <a onclick="loadNews(0,1)" class="nav-link active" href="#tab0" data-bs-toggle="tab">@Localizer["tab1"]</a>
                </li>
                <li class="nav-item">
                    <a onclick="loadNews(1,1)" class="nav-link" href="#tab1" data-bs-toggle="tab">@Localizer["tab2"]</a>
                </li>
                <li class="nav-item">
                    <a onclick="loadNews(2,1)" class="nav-link" href="#tab2" data-bs-toggle="tab">@Localizer["tab3"]</a>
                </li>
                 <li class="nav-item">
                    <a onclick="loadNews(3,1)" class="nav-link" href="#tab3" data-bs-toggle="tab">@Localizer["tab4"]</a>
                </li>
                 <li class="nav-item">
                    <a onclick="loadNews(4,1)" class="nav-link" href="#tab4" data-bs-toggle="tab">@Localizer["tab5"]</a>
                </li>

            </ul>
        </nav>
        <div class="tab-content pt-0">
            
            <div role="tabpanel" id="tab0" class="tab-pane fade show active" style="direction:@align">
                <div class="row" id="list0">

                </div>
                <a onclick="loadNews(0,1)" class="w-25 btn btn-sm btn-primary text-white mb-5" id="more0">
                    @(CultureInfo.CurrentUICulture.Name! == "en-US" ? "more" : "بیشتر")
                </a>
            </div>

            <div role="tabpanel" id="tab1" class="tab-pane fade">
                <div class="row" id="list1">
                </div>
                <a onclick="loadNews(1,1)" class="w-25 btn btn-sm btn-primary text-white mb-5" id="more1">
                    @(CultureInfo.CurrentUICulture.Name! == "en-US" ? "more" : "بیشتر")
                </a>
            </div>

            <div role="tabpanel" id="tab2" class="tab-pane fade">
                <div class="row" id="list2">
                </div>
                <a onclick="loadNews(2,1)" class="w-25 btn btn-sm btn-primary text-white mb-5" id="more2">
                    @(CultureInfo.CurrentUICulture.Name! == "en-US" ? "more" : "بیشتر")
                </a>
            </div>

            <div role="tabpanel" id="tab3" class="tab-pane fade">
                <div class="row" id="list3">
                </div>
                <a onclick="loadNews(3,1)" class="w-25 btn btn-sm btn-primary text-white mb-5" id="more3">
                    @(CultureInfo.CurrentUICulture.Name! == "en-US" ? "more" : "بیشتر")
                </a>
            </div>

            <div role="tabpanel" id="tab3" class="tab-pane fade">
                <div class="row" id="list3">
                </div>
                <a onclick="loadNews(4,1)" class="w-25 btn btn-sm btn-primary text-white mb-5" id="more4">
                    @(CultureInfo.CurrentUICulture.Name! == "en-US" ? "more" : "بیشتر")
                </a>
            </div>

        </div>
    </div>
</div>

