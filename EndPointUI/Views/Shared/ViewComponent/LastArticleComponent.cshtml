                                <img class="me-3" src="~/gallery/Article/@Model[0].ImagePath"
                                     alt="@Model[0].TitleFa @Model[0].TitleEn">
                                <div class="media-body flex-grow-1 mx-2">
                                    <h5 class="mt-0">@Model[0].TitleFa</h5>
                                    <span class="mt-0">@Model[0].PublishDateFa</span>
                                    <p>
                                        @Model[0].TextFa
