                                     alt="@Model[0].TitleFa @Model[0].TitleEn">
                                <div class="media-body flex-grow-1 mx-2">
                                    <h5 class="mt-0">@Model[0].TitleEn</h5>
                                    <span class="mt-0">@Model[0].PublishDateEn</span>
                                    <p>
                                        @Model[0].TextEn
                                    </p>
                            </div>
                                </div></a>
