                {
                    <div class="row">
                        @if (CultureInfo.CurrentUICulture.Name == "en-US")
                        {
                            <a asp-controller="Blog" asp-action="Detail" asp-route-Id="@Model[0].Id">
                            <div class="media align-items-center mt-4 col-sm-6 col-md-12 d-flex">
                                  
