@model IReadOnlyList<Application.Queries.Article.ViewModels.ArticleViewModel>
@{
    string direction = CultureInfo.CurrentUICulture.Name == "en-US" ? "ltr" : "rtl";
}    <section class="our-blog">
    <div class="container" style="direction:@direction;">
        <div class="row">
            <div class="col-md-6">
                <div>
                    <h2 class="section-title"> @Localizer["Title"] </h2>
                </div>
