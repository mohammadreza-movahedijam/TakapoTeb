@model IReadOnlyList<Application.Queries.Departement.DepartementViewModel>

    @{
    string font = CultureInfo.CurrentUICulture.Name! == "en-US" ? "English" : ""!;

    }
<div class="row">
@foreach (var item in Model)
{
  <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12">
            <div class="card shadow">
                <div class="card-header text-center tab-color">
                    <h3 class="text-white @font">
                        @if (CultureInfo.CurrentUICulture.Name == "en-US")
                        {
                            @item.NameEn
                        }
                        else
                        {
                            @item.NameFa
                        }
                    </h3>
                </div>
                <div class="card-body text-center ">
                    <h4 class="text-dark @font">
                        @if (CultureInfo.CurrentUICulture.Name == "en-US")
                        {
                            @item.PhoneNumberEn
                        }
                        else
                        {
                            @item.PhoneNumberFa 
                        }
                    </h4>
                </div>
            </div>
        </div>


}
   
</div>