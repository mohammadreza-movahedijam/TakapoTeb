@model Application.Queries.Statistic.StatisticViewModel
@{
    string font = CultureInfo.CurrentUICulture.Name! == "en-US" ? "English" : ""!;
}
}
@if (CultureInfo.CurrentUICulture.Name == "en-US")
{
    <div class="row counts">
        <div class="col-sm-6 col-md-3">
            <h3 class="@font">@Model.NumberOne</h3>
            <h4 class="@font">@Model.TitleEnOne</h4>
        </div>
        <div class="col-sm-6 col-md-3">
            <h3 class="@font">@Model.NumberTwo</h3>
            <h4 class="@font">@Model.TitleEnTwo</h4>
        </div>
        <div class="col-sm-6 col-md-3">
            <h3 class="@font">@Model.NumberThree</h3>
            <h4 class="@font">@Model.TitleEnThree</h4>
        </div>
        <div class="col-sm-6 col-md-3">
            <h3 class="@font">@Model.NumberFour</h3>
            <h4 class="@font">@Model.TitleEnFour</h4>
        </div>
    </div>
}
else
{
     <div class="row counts">
        <div class="col-sm-6 col-md-3">
            <h3>@Model.NumberOne</h3>
            <h4>@Model.TitleFaOne</h4>
        </div>
        <div class="col-sm-6 col-md-3">
            <h3>@Model.NumberTwo</h3>
            <h4>@Model.TitleFaTwo</h4>
        </div>
        <div class="col-sm-6 col-md-3">
            <h3>@Model.NumberThree</h3>
            <h4>@Model.TitleFaThree</h4>
        </div>
        <div class="col-sm-6 col-md-3">
            <h3>@Model.NumberFour</h3>
            <h4>@Model.TitleFaFour</h4>
        </div>
    </div>
}