@model Application.Queries.Setting.ViewModels.AboutSectionViewModel
@{
    string icon = string.Empty;
}
<section class="about-us mb-3">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                @if (CultureInfo.CurrentUICulture.Name == "fa-IR")
                {
                      <div class="text-right" style="direction:rtl">
                        <h2 class="section-title"> @Localizer["Title"]</h2>
                        <h3 class="mt-3">+ @Model.YearsExperience   @Localizer["SubTitle"] </h3>

                        @Html.Raw(Model.AboutFa)


                    </div>
                    icon = "fa-arrow-circle-left";

                }
                else
                {
                    <div class="text-right" style="direction:ltr">
                        <h2 class="section-title"> @Localizer["Title"]</h2>
                        <h3 class="mt-3">@Model.YearsExperience +  @Localizer["SubTitle"] </h3>

                        @Html.Raw(Model.AboutEn)

                    </div>
                    icon = "fa-arrow-circle-right";
                }
                <a class="btn btn-primary mt-4">@Localizer["Button"]
                    
                    <i class="fas @icon ms-2"></i>
                </a>
            </div>
            <div class="col-md-6 position-relative">
                <img src="~/gallery/setting/@Model.AboutImagePath" alt="About Us" class="img-fluid" />
                <div class="media d-flex">
                    <img src="assets/img/about-icon.png" class="align-self-center me-3" alt="...">
                    <div class="media-body flex-grow-1">
                        <h5 class="mt-0">Free 15 Min Consultation</h5>
                        <p>Use the form to book your FREE 15 min telephone consultation.</p>
                        <a href="#">Know More <i class="fas fa-arrow-circle-right ms-1"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>