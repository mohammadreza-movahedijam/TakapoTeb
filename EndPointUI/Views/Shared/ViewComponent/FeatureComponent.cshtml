@model Application.Queries.Feature.FeatureViewModel
@{
    string font = CultureInfo.CurrentUICulture.Name! == "en-US" ? "English" : ""!;

    string direction = CultureInfo.CurrentUICulture.Name == "en-US" ? "ltr" : "rtl";
}
<div class="banner-bottom">
    <div class="container">
        <div class="row">

            <div class="col-md-3">
                <div class="card feature-bg " dir="@direction">
                    <div>
                        @if (Model.ImageOne == "default.jpg")
                        {
                            <img src="~/gallery/default.jpg"  />
                        }
                        else
                        {
                            <img src="~/gallery/feature/@Model.ImageOne" />

                        }
                    </div>
                    <div class="care-text">
                        @if (CultureInfo.CurrentUICulture.Name == "en-US")
                        {
                            <h2 class="@font">@Model.TitleEnOne</h2>
                            <p class="@font">@Model.TextEnOne</p>
                        }
                        else
                        {

                            <h2>@Model.TitleFaOne</h2>
                            <p>@Model.TextFaOne</p>
                        }
                        
                    </div>
                </div>
            </div>

