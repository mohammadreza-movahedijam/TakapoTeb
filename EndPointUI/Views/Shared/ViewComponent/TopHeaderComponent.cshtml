@model Application.Queries.Setting.ViewModels.WayCommunicationViewModel
@{
    string direction = CultureInfo.CurrentUICulture.Name == "en-US" ? "ltr" : "rtl";
    string location = CultureInfo.CurrentUICulture.Name! == "en-US" ? Model.LocationEn! : Model.LocationFa!;

}
 
<div class="top-header" style="direction:@direction;">
    <div class="container-fluid">
        <div class="row">
            <div class="col d-flex justify-content-between">
                <ul class="d-flex justify-content-between align-items-center">
                    <li>
                        <i class="fas fa-phone-alt"></i>  @Localizer["PhoneNumber"] : @Model.ContactNumber
                    </li>
                    <li>
                        <i class="fas fa-map-marker-alt"></i>  
                        @Localizer["Location"] : 
                        @location
                    </li>

                </ul>

                <ul class="d-flex justify-content-between align-items-center">
               
                    @if (CultureInfo.CurrentUICulture.Name == "en-US")
                    {
                        <li>@Model.WorkingHoursEn</li>
                    }
                    else
                    {
                        <li>@Model.WorkingHoursFa</li>
                    }
                    <li>
                        <div class="social-icon">
                            <ul>
                                <li class="mx-1">
                                    <a href="@Model.WhatsApp" target="_blank">
                                        <i class="fab fa-whatsapp"></i>
                                    </a>
                                </li>
                                <li class="mx-1">
                                    <a href="@Model.Linkedin" target="_blank">
                                        <i class="fab fa-linkedin-in"></i>
                                    </a>
                                </li>
                                <li class="mx-1">
                                    <a href="@Model.Instagram" target="_blank">
                                        <i class="fab fa-instagram"></i>
                                    </a>
                                </li>
                                <li class="mx-1">
                                    <a href="@Model.Telegram" target="_blank">
                                        <i class="fab fa-telegram"></i>
                                    </a>
                                </li>

                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>