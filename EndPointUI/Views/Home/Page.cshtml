@using Application.Queries.Page
@model PageDetailViewModel
@{
    string align = CultureInfo.CurrentUICulture.Name! == "en-US" ? "ltr" : "rtl"!;
    string? title = CultureInfo.CurrentUICulture.Name! == "en-US" ? Model.TitleEn : Model.TitleFa;
    ViewData["Title"] = title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mg-t-100">
    <div class="row mt-5">
        <div class="col-lg-12 col-xl-12 col-md-12 ">
            <div class="blog-view shadow" dir="@align">
                <div class="blog blog-single-post">
                    
                    @if (CultureInfo.CurrentUICulture.Name == "en-US")
                    {
                        <h3 class="blog-title">@Model.TitleEn</h3>
                    }
                    else

                    {
                        <h3 class="blog-title">@Model.TitleFa</h3>
                    }
                    <div class="blog-image">
                    <a href="javascript:void(0);">

                            @if (Model.ImagePath == "default.jpg")
                            {
                            <img src="~/gallery/default.jpg" class="img-fluid" />
                            }
                            else
                            {
                            <img src="~/gallery/Page/@Model.ImagePath" class="img-fluid" />

                            }
                    </a>
                </div>

                    <div class="blog-content">
                        @if (CultureInfo.CurrentUICulture.Name == "en-US")
                        {
                            @Html.Raw(Model.DescriptionEn)
                        }
                        else

                        {
                            @Html.Raw(Model.DescriptionFa)
                        }

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
