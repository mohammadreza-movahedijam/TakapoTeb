@model Application.Commands.User.DataTransferObject.SignInDto
@{
    string direction = CultureInfo.CurrentUICulture.Name == "en-US" ? "ltr" : "rtl";
    string title = CultureInfo.CurrentUICulture.Name == "en-US" ? "Sign In" : "ورود به سایت";

    ViewData["Title"] = title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mb-5 mt-5">
    <div class="col-md-8 offset-md-2">
        <div class="account-content">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-7 col-lg-6 login-left">
                    <img src="~/gallery/identity.png" class="img-fluid" alt="Doccure Register">
                </div>
                <div class="col-md-12 col-lg-6 login-right" style="direction:@direction;">
                    <div class="login-header">
                        <h3>
                            @Localizer["Title"]
                        </h3>   @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-warning">@ViewBag.Error</div>
                        }
                    </div>
                    <form asp-controller="Identity" asp-action="SignIn" method="post">
                        <div class="form-group form-focus mt-4">
                            <input asp-for="UserName" type="text" class="form-control floating">
                            <label class="focus-label">@Localizer["UserName"]</label>
                            <span class="text-danger mt-2" asp-validation-for="UserName"></span>
                        </div>
                        <div class="form-group form-focus mt-4">
                            <input asp-for="Password" type="password" class="form-control floating">
                            <label class="focus-label">@Localizer["Password"]</label>
                            <span class="text-danger mt-2" asp-validation-for="Password"></span>
                        </div>
                        <div class="text-end">
                            <a class="forgot-link" href="/signup">@Localizer["SignUpLink"]</a>
                        </div>
                        <button class="btn btn-primary w-100 btn-lg login-btn" type="submit">@Localizer["Button"]</button>
                      
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Script {
    <partial name="_ValidationScriptsPartial.cshtml" />
}